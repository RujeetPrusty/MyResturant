<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyNumber"
    android:background="@drawable/seefood_background1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="100dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caribbean"
            android:fontFamily="@font/lobster_regular"
            android:textSize="70dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/descriptionview_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please enter the OTP you have recived"
            android:fontFamily="@font/lobster_regular"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"
            android:layout_marginTop="20dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Enter_Otp"
            android:layout_marginTop="70dp"
            android:background="@drawable/edit_text_round">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/otp_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter OTP"
                android:inputType="numberPassword"
                android:textColorHint="@android:color/white"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="5dp"
        />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/Verify_Otp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:fb_text ="Verify OTP"
        app:fb_radius = "24dp"
        app:fb_defaultColor = "#047654">
    </mehdi.sakout.fancybuttons.FancyButton>

</LinearLayout>